<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="4"
                android:columnCount="1">

            <Button
                    android:id="@+id/btnMainHeartRate"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/btnMainHeartRate"
                    android:layout_gravity="center"
                    android:minWidth="350sp"/>

            <Button
                    android:id="@+id/btnMainGPS"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/btnMainGPS"
                    android:layout_gravity="center"
                    android:minWidth="350sp"/>


            <Button
                    android:id="@+id/btnMainPressure"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/btnMainPressure"
                    android:layout_gravity="center"
                    android:minWidth="350sp"/>
            <Button
                    android:id="@+id/btnMainAccelerometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/btnMainAccelerometer"
                    android:layout_gravity="center"
                    android:minWidth="350sp"/>

            <Button
                    android:id="@+id/btnMainPhoto"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/btnMainPhoto"
                    android:layout_gravity="center"
                    android:minWidth="350sp"/>

        </GridLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>