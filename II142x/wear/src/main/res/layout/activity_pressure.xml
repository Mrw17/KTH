<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PressureActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp">
        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="1"
                app:layout_boxedEdges="all">

            <Button android:text="@string/btnPressureStart"
                    android:layout_width="100sp"
                    android:layout_height="48dp"
                    android:id="@+id/btnGetPressure"
                    android:textSize="11sp"
                    android:layout_gravity="center"/>
                <TextView
                        android:id="@+id/textViewPressure"
                        android:layout_height="25sp"
                        android:layout_width="100sp"
                        android:textSize="11sp"
                        android:text="@string/pressure"
                        android:layout_gravity="center"/>
                <TextView
                        android:id="@+id/textViewPressureCurrentValue"
                        android:layout_height="25sp"
                        android:layout_width="100sp"
                        android:textSize="11sp"
                        android:text="@string/zero_number"
                        android:layout_gravity="center"/>

            <Button android:text="@string/back"
                    android:layout_width="100sp"
                    android:layout_height="48dp"
                    android:id="@+id/btnPressureBack"
                    android:textSize="11sp"
                    android:layout_gravity="center"/>

        </GridLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>